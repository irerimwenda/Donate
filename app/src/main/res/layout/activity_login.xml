<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ireribrian.myapi.activities.loginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/donateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONATE"
        android:fontFamily="casual"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_below="@+id/donateText"
        android:id="@+id/donatelogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/donatelogin"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etUserName"
        android:layout_below="@+id/donatelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:hint="Enter Username"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etUserName"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/etPassword"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="12dp"
        android:textSize="22sp"
        android:text="LOGIN"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"/>

    </RelativeLayout>
    </ScrollView>

